<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="@dimen/activity_horizontal_margin"
    android:visibility="visible"
    tools:context=".fragment.TimerFragment">

    <LinearLayout
        android:id="@+id/verticalTimer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <Button
            android:id="@+id/testTimerPick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/smallVerticalButtonMargin"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_primary_selector"
            android:text="Klepsydra"
            android:textAllCaps="true"
            android:textAppearance="@style/ButtonLabelPrimary" />

        <LinearLayout
            android:id="@+id/horizontalTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <NumberPicker
                android:id="@+id/minutesPicker"
                style="@style/Theme.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible" />

            <NumberPicker
                android:id="@+id/secondPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


        <TextView
            android:id="@+id/testTextViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="00:00:00"
            android:textAppearance="@style/HourglassTimer"
            android:textColor="@color/colorAccentLight"
            android:textSize="40sp" />

        <Button
            android:id="@+id/timerStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/smallVerticalButtonMargin"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_primary_selector"
            android:text="@string/StartCounting"
            android:textAllCaps="true"
            android:textAppearance="@style/ButtonLabelPrimary"
            tools:ignore="DuplicateIds" />

        <Button
            android:id="@+id/timerPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/smallVerticalButtonMargin"
            android:layout_marginTop="@dimen/smallVerticalButtonMargin"
            android:background="@drawable/button_primary_selector"
            android:text="@string/pause"
            android:textAllCaps="true"
            android:textAppearance="@style/ButtonLabelPrimary" />

        <Button
            android:id="@+id/timerCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/smallVerticalButtonMargin"
            android:layout_marginTop="@dimen/smallVerticalButtonMargin"
            android:background="@drawable/button_primary_selector"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textAppearance="@style/ButtonLabelPrimary" />

    </LinearLayout>

</FrameLayout>